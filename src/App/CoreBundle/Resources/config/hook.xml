<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="hook.class">App\CoreBundle\EventListener\HookListener</parameter>
    </parameters>

    <services>
        <service id="hook" class="%hook.class%">
            <tag name="kernel.listener" event="core.response" method="onCoreResponse" priority="-128" />
            <argument type="service" id="templating.engine.twig" />
            <argument>%adsense.client_id%</argument>
            <argument>%adsense.height%</argument>
            <argument>%adsense.width%</argument>
            <argument>%adsense.colors%</argument>
        </service>
    </services>
</container>
