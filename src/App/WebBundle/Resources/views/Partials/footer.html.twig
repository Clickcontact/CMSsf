<footer class="footer">
    {% for category in categories %}
        <nav>
                <header>{{ category.name }}</header>
                <ul>
                    {% for subcategory in category.subCategories %}
                        <li>
                                <a href="{{ path('_subcategory', {'slug': category.name, 'category_id': category.id, 'subslug': subcategory.name, 'subcategory_id': subcategory.id}) }}">
                                     {{ subcategory.name }}
                                </a>
                        </li>
                    {% endfor %}
                </ul>
        </nav>
    {% endfor %}
    <div class="copyright">Réalisé par: LOUARDI Abdeltif</div>
</footer>
