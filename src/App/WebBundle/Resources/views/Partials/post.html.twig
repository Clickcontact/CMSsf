<div class="content">
    {% for post in posts %}
    <article class="widget">
        <header>
                <h1>{{ post.title }}</h1>
        </header>
        <div>
                <p>
                    {{ post.body|truncate(330) }}
                </p>
        </div>
        <footer>
                <p class="date">Date: 10/10/2010</p>
                <p class="author">Par: Admin</p>
                <p class="actions">
			<a href="{{ path('_post', {'post_id': post.id, 'slug': post.title}) }}" class="button">Voir la suite</a>
		</p>
        </footer>
    </article>
    {% endfor %}
</div>
