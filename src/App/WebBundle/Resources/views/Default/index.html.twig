{% extends 'AppWebBundle::layout.html.twig' %}

{% block body %}
    <a href="{{ path("_home") }}">{{ "Home"|trans }}</a>
    {% for category in categories %}
        <a href="{{ path('_category', {'category_id': category.id, 'slug': category.name}) }}">{{ category.name }}</a>
    {% endfor %}

    {% for post in posts %}
    <div class="post-item widget">
        <h3>{{ post.title }}</h3>
        <p>{{ post.body }}</p>
	<div class="post-tags">
	{% for tag in post.tag %}
		<a href="{{ path('_tag', {'tag_id': tag.id, 'tag': tag.name}) }}">{{ tag.name }}</a>
	{% endfor %}
	</div>
    </div>
    {% endfor %}

    {{ paginator_render(posts)|raw }}
{% endblock %}
