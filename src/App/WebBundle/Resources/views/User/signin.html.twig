{% extends 'AppWebBundle::layout.html.twig' %}

{% block body %}
<div class="login widget">
     <form action="{{ path('_check') }}" method="post">
          <fieldset>
                <legend>Signin</legend>

                {{ form_widget(form_signin) }}
                <a href="{{ path('_forgotten_password') }}">forgotten password</a>
                <input type="submit" value="Signin" class="button" />         
          </fieldset>
     </form>

     <form action="{{ path('_signup') }}" method="post">
          </fieldset>
               <legend>Signup</legend>
               {{ form_widget(form_signup) }}
               <input type="submit" value="Signup" class="button" />
          </fieldset>
     </form>
</div>
{% endblock %}
